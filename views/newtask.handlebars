          <h5>Due Date</h5>
          <div class="form-group">
            <input type="date" name="dueDate" max="3000-12-31" min="1000-01-01" class="form-control" required>
          </div>
          <h5>Estimated time</h5>
          <div class="input-group form-group">
            <input type="number" name="estimatedTime" class="form-control" placeholder="minutes" required>
          </div>
